#
# bspwm hotkeys
#

super + q
    bspc node -c

super + t
    bspc desktop -l next

super + b
    bspc desktop -B

super + {s,d,f}
    bspc node -t {floating,tiled,fullscreen}

super + {grave,Tab}
    bspc {node,desktop} -f last

super + apostrophe
    bspc node -s last

super + y
    bspc node -w last.manual

super + m
    bspc node -s biggest

super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
    bspc node -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

super + bracket{west,east}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
    bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc node -e {west -10,south +10,north -10,east +10}

super + alt + shift + {h,j,k,l}
    bspc node -e {east -10,north +10,south -10,west +10}

super + ctrl + {1-9}
    bspc node -r 0.{1-9}

super + {_,shift + }{_,alt + }{1-9,0}
    bspc {desktop -f,node -d} {1,2}-{1-9,0}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
    bspc pointer -u

#
# wm independent hotkeys
#

super + Return
    urxvtc

super + r
    dmenu_launcher run

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

XF86Audio{Lower,Raise}Volume
    volume {down,up}

{_,shift,ctrl} + Print
    screentool {png,mp4,png}

Pause
    xdotool mousemove_relative 0 9999

Scroll_Lock
    charinfo

ctrl + Scroll_Lock
    clipswap

alt + Scroll_Lock
    nvpaste

ctrl + shift + Scroll_Lock
    pastetype

super + p
    music pick 5

super + l
    lock

super + n
    urxvtc -e nvim

super + i
    urxvtc -e irssi
